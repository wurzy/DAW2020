extends layout

block content
    .w3-card-4
      header.w3-container.w3-blue
        h3.w3-left Student: #{info.numero} 
      ul
       li(style="list-style: none;") 
        img(src=`/public/images/${info.photo}`, alt="Not Available", style="width:255px;height:255px;")
       li 
        b Student Number: 
        | #{info.numero} 
       li
        b Name: 
        | #{info.nome}
       li
        b GitHub: 
        if info.git 
         a(href=`${info.git}`) Click Here
        else 
         | Not Available
        li
         b Homework Assignments: 
         if info.tpc.length > 0
          - var n=1
          ul
           each tpc in info.tpc
            li(style="list-style: none;") 
             b ##{n}: 
             if tpc==0 
              | &#10060; 
             else 
              | &#10004;&#65039;
             - n++
         else 
          | Didn't Submit Any   
      p(style="text-indent: 20px")
       a(href="/") Back  

      footer.w3-container.w3-blue
       p 
        br 
