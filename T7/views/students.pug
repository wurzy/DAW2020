extends layout

block content
    .w3-card-4
      header.w3-container.w3-blue
        h3.w3-left Students List (DAW2020)
      p(style="text-indent: 20px")
       a(href="/students/register") Register Student
      if list.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th Number
              th Name
              th Git
              th
            each s in list
              tr
                td
                 a(href=`/students/${s.numero}`) #{s.numero}
                td= s.nome
                td= s.git
                td
                 a(href=`/students/${s.numero}`, onclick="sendDelete(this.href,event)") Delete
      else
        .w3-container
          p There are no students...
      p    
      footer.w3-container.w3-blue
       p 
        br 
    script. 
     function sendDelete(href,event){
        let xhttp = new XMLHttpRequest();
        event.preventDefault()
        xhttp.open("DELETE", href, true);
        xhttp.send();
        document.location.href='/'
     }
  
